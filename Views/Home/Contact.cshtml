@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="container py-5">
    <h1 class="section-title text-center">@Localizer["Title"]</h1>
    <p class="text-center text-muted mb-5">@Localizer["Subtitle"]</p>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="row g-4">
                <!-- Contact Information -->
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title mb-4">
                                <i class="fas fa-address-card text-primary me-2"></i>
                                @Localizer["Info.Title"]
                            </h5>
                            
                            <div class="contact-info">
                                <p class="mb-3">
                                    <i class="fas fa-envelope text-primary"></i>
                                    <strong>@Localizer["Info.Email"]:</strong><br />
                                    <a href="mailto:hantuyettu2905@gmail.com" class="text-decoration-none">
                                        hantuyettu2905@gmail.com
                                    </a>
                                </p>
                                
                                <p class="mb-3">
                                    <i class="fas fa-phone text-primary"></i>
                                    <strong>@Localizer["Info.Phone"]:</strong><br />
                                    <a href="tel:+84389951805" class="text-decoration-none">
                                        +84 389 951 805
                                    </a>
                                </p>
                                
                                <p class="mb-0">
                                    <i class="fas fa-map-marker-alt text-primary"></i>
                                    <strong>@Localizer["Info.Location"]:</strong><br />
                                    @Localizer["Info.LocationValue"]
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Social Links -->
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title mb-4">
                                <i class="fas fa-share-alt text-primary me-2"></i>
                                @Localizer["Social.Title"]
                            </h5>
                            
                            <div class="d-grid gap-3">
                                <a href="https://github.com/Wykowjbu" target="_blank"
                                   class="btn btn-outline-dark btn-lg">
                                    <i class="fab fa-github me-2"></i>
                                    @Localizer["Social.GitHub"]
                                </a>
                                
                                <a href="https://linkedin.com/in/Wykowjbu" target="_blank"
                                   class="btn btn-outline-primary btn-lg">
                                    <i class="fab fa-linkedin me-2"></i>
                                    @Localizer["Social.LinkedIn"]
                                </a>
                                
                                <a href="mailto:hantuyettu2905@gmail.com" 
                                   class="btn btn-outline-danger btn-lg">
                                    <i class="fas fa-envelope me-2"></i>
                                    Send Email
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Availability -->
            <div class="card mt-4 bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-calendar-check text-success me-2"></i>
                        @Localizer["Availability"]
                    </h5>
                    <p class="card-text mb-0">@Localizer["AvailabilityText"]</p>
                </div>
            </div>

            <!-- Areas of Interest -->
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-heart text-danger me-2"></i>
                        @Localizer["Interests"]
                    </h5>
                    <div class="mt-3">
                        @foreach (var interest in Localizer["InterestsText"].Value.Split(" â€¢ "))
                        {
                            <span class="skill-badge">@interest</span>
                        }
                    </div>
                </div>
            </div>

            <!-- Call to Action -->
            <div class="text-center mt-5 p-4 bg-primary text-white rounded">
                <h4 class="mb-3">
                    <i class="fas fa-rocket me-2"></i>
                    Let's Build Something Great Together!
                </h4>
                <p class="mb-4">
                    I'm excited to contribute to innovative .NET projects and grow as a developer.
                </p>
                <a href="mailto:hantuyettu2905@gmail.com" class="btn btn-light btn-lg">
                    <i class="fas fa-paper-plane me-2"></i>
                    @Localizer["Nav.Contact"]
                </a>
            </div>
        </div>
    </div>
</div>
