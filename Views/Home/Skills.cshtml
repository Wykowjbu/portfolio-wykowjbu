@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="container py-5">
    <h1 class="section-title text-center">@Localizer["Title"]</h1>
    <p class="text-center text-muted mb-5">@Localizer["Subtitle"]</p>

    <div class="row g-4">
        <!-- Programming Languages -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-code text-primary me-2"></i>
                        @Localizer["Category.Programming"]
                    </h5>
                    <div class="mt-3">
                        <span class="skill-badge">C#</span>
                        <span class="skill-badge">.NET</span>
                        <span class="skill-badge">JavaScript</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Web Development -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-globe text-primary me-2"></i>
                        @Localizer["Category.WebDev"]
                    </h5>
                    <div class="mt-3">
                        <span class="skill-badge">ASP.NET Core MVC</span>
                        <span class="skill-badge">ASP.NET Web API</span>
                        <span class="skill-badge">HTML/CSS</span>
                        <span class="skill-badge">Bootstrap</span>
                        <span class="skill-badge">Razor Pages</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Database Management -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-database text-primary me-2"></i>
                        @Localizer["Category.Database"]
                    </h5>
                    <div class="mt-3">
                        <span class="skill-badge">SQL Server</span>
                        <span class="skill-badge">PostgreSQL</span>
                        <span class="skill-badge">Entity Framework Core</span>
                        <span class="skill-badge">LINQ</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tools & Version Control -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-tools text-primary me-2"></i>
                        @Localizer["Category.Tools"]
                    </h5>
                    <div class="mt-3">
                        <span class="skill-badge">Git</span>
                        <span class="skill-badge">GitHub</span>
                        <span class="skill-badge">Visual Studio</span>
                        <span class="skill-badge">VS Code</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Core Concepts -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-brain text-primary me-2"></i>
                        @Localizer["Category.Concepts"]
                    </h5>
                    <div class="mt-3">
                        <span class="skill-badge">OOP</span>
                        <span class="skill-badge">MVC Architecture</span>
                        <span class="skill-badge">RESTful API</span>
                        <span class="skill-badge">Clean Code</span>
                        <span class="skill-badge">SOLID Principles</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Software Testing -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-bug text-primary me-2"></i>
                        @Localizer["Category.Testing"]
                    </h5>
                    <div class="mt-3">
                        <span class="skill-badge">Manual Testing</span>
                        <span class="skill-badge">Regression Testing</span>
                        <span class="skill-badge">Test Case Writing</span>
                        <span class="skill-badge">Bug Reporting</span>
                        <span class="skill-badge">Quality Assurance</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Language Proficiency -->
    <div class="mt-5">
        <div class="card bg-light">
            <div class="card-body">
                <h4 class="card-title text-center mb-4">
                    <i class="fas fa-language text-primary me-2"></i>
                    @Localizer["Languages.Title"]
                </h4>
                <div class="row text-center">
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div class="p-3">
                            <i class="fas fa-flag fa-2x text-danger mb-2"></i>
                            <p class="mb-0 fw-bold">@Localizer["Languages.Vietnamese"]</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div class="p-3">
                            <i class="fas fa-flag fa-2x text-primary mb-2"></i>
                            <p class="mb-0 fw-bold">@Localizer["Languages.English"]</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3">
                            <i class="fas fa-flag fa-2x text-success mb-2"></i>
                            <p class="mb-0 fw-bold">@Localizer["Languages.Japanese"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a asp-controller="Home" asp-action="Contact" class="btn btn-primary btn-lg">
            <i class="fas fa-paper-plane me-2"></i>@Localizer["CTA.GetInTouch"]
        </a>
    </div>
</div>
